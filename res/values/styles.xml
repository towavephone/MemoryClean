<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_dialog" parent="android:Animation">
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
    </style>

    <style name="MyCheckBox1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkboxstyle1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyCheckBox2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkboxstyle2</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyCheckBox3" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkboxstyle3</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyToggleButton">
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/switchstyle</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>